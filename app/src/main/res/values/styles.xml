<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/wood</item>
    </style>

    <!-- Style for white Buttons -->
    <style name="style_white_button">
        <item name="android:layout_width">@dimen/layout_width_weight</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">@dimen/view_weight</item>
        <item name="android:rotation">@dimen/view_rotation</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_button</item>
    </style>

    <!-- style for black Buttons -->
    <style name="style_black_button">
        <item name="android:layout_width">@dimen/layout_width_weight</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">@dimen/view_weight</item>
        <item name="android:textSize">@dimen/textsize_button</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- style for white TextViews -->
    <style name="style_white_textview">
        <item name="android:layout_width">@dimen/layout_width_weight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize</item>
        <item name="android:layout_weight">@dimen/view_weight</item>
        <item name="android:gravity">center</item>
        <item name="android:rotation">@dimen/view_rotation</item>
    </style>

    <!-- style for black TextViews -->
    <style name="style_black_textview">
        <item name="android:layout_width">@dimen/layout_width_weight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize</item>
        <item name="android:layout_weight">@dimen/view_weight</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- style for reset Buttons -->
    <style name="style_reset_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/button_reset</item>
    </style>

    <!-- style for ImageViews -->
    <style name="style_imageview">
        <item name="android:layout_width">@dimen/layout_width_weight</item>
        <item name="android:layout_height">@dimen/layout_height_image</item>
        <item name="android:layout_weight">@dimen/view_weight</item>
    </style>

    <!-- style for horizontal LinearLayouts -->
    <style name="style_horizontal_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_weight</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_weight">@dimen/view_weight</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>